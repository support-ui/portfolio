<style>
  .container {
    display: flex;
    justify-content: center;
    align-items: center;
    padding: 4rem;
    width: 100%;
    position: relative;
  }

  .row {
    display: flex;
    justify-content: space-between;
    width: 100%;
  }

  .col-left,
  .col-right {
    flex: 1;
    padding: 1rem;
  }

  .col-left {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: flex-start; /* Alineación izquierda */
  }

  .circle {
    width: 30vw; /* Aumento del tamaño del círculo */
    height: 30vw; /* Aumento del tamaño del círculo */
    background-color: transparent;
    border: 2px solid white;
    border-radius: 50%;
    position: relative;
    display: flex;
    justify-content: center;
    align-items: center;
  }

  .icon-container {
    position: absolute;
    width: 5rem; /* Tamaño mayor de los iconos */
    height: 5rem; /* Tamaño mayor de los iconos */
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%) rotate(calc(360deg / 10 * var(--i)))
      translateY(calc(15vw)); /* Ajustado a nuevo tamaño */
    transition:
      transform 0.3s ease-in-out,
      animation-play-state 0.2s ease-in-out;
    display: flex;
    justify-content: center;
    align-items: center;
  }

  .icon-container:hover {
    transform: translate(-50%, -50%) rotate(calc(360deg / 10 * var(--i)))
      translateY(calc(15vw)) scale(1.2);
  }

  .icon {
    width: 100%;
    height: 100%;
    object-fit: contain;
    transition: transform 0.3s ease-in-out;
  }

  .icon-container:hover .icon {
    transform: scale(1.2);
  }

  .center-content {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    z-index: 10;
  }

  .center-image {
    max-width: 50%;
    max-height: 50%;
    object-fit: contain;
    margin-bottom: 0.5rem;
    transition: opacity 0.2s ease-in-out;
  }

  .center-legend {
    font-size: 0.8rem;
    color: white;
    opacity: 0.8;
    transition: opacity 0.2s ease-in-out;
  }

  .hidden {
    opacity: 0;
    visibility: hidden;
  }

  @keyframes rotate {
    from {
      transform: rotate(0deg);
    }
    to {
      transform: rotate(360deg);
    }
  }
</style>

<script>
  const circle = document.querySelector(".circle") as HTMLElement;
const iconContainers = document.querySelectorAll(".icon-container") as NodeListOf<HTMLElement>;
const centerImage = document.getElementById("center-image") as HTMLImageElement;
const centerLegend = document.getElementById("center-legend") as HTMLElement;
const fullDiv = document.getElementById("w-full") as HTMLElement;
const contacto = document.getElementById("contacto") as HTMLElement;

// Mapeo de los índices de los iconos con sus colores
const iconColors: { [key: number]: string } = {
  0: "#ECECEC",
  1: "#61DAFB",
  2: "#FF7262",
  3: "#133B6A",
  4: "#8043B2",
  5: "#4086F4",
  6: "#FDD83C",
  7: "#A259FF", // Asumiendo un color para el octavo icono (ajusta si es necesario)
  8: "#D3D3D4", // Repetición del primer color para el noveno icono
  9: "#D3D3D4", // Repetición del primer color para el décimo icono
};

if (circle && centerImage && centerLegend && fullDiv && contacto) {
  iconContainers.forEach((iconContainer, index) => {
    const icon = iconContainer.querySelector(".icon") as HTMLImageElement;
    const legend = (iconContainer.dataset.legend || "") as string;
    const iconColor = iconColors[index];

    iconContainer.addEventListener("mouseenter", () => {
      if (iconColor) {
        fullDiv.style.background = `linear-gradient(to bottom left, ${iconColor} 0%, black 100%)`;
        contacto.style.background = `${iconColor}`;
        contacto.style.color = `#ffffff`;
      } else {
        fullDiv.style.background = `linear-gradient(to bottom left, #ccc 0%, black 100%)`; // Color por defecto
      }

      circle.style.animationPlayState = "paused";
      centerImage.src = icon.src;
      centerImage.alt = icon.alt;
      centerLegend.textContent = legend;
      centerImage.classList.remove("hidden");
      centerLegend.classList.remove("hidden");
    });

    iconContainer.addEventListener("mouseleave", () => {
      fullDiv.style.background = "";
      contacto.style.background = `#ffffff`;
      contacto.style.color = `#000`;
      circle.style.animationPlayState = "running";
      centerImage.classList.add("hidden");
      centerLegend.classList.add("hidden");
      centerImage.src = "";
      centerImage.alt = "";
      centerLegend.textContent = "";
    });
  });
}

</script>
