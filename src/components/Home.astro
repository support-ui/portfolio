---
import Skills from "./Skills.astro";
---

<div class="relative h-screen overflow-hidden font-sans">
    <video
        class="absolute inset-0 w-full h-full object-cover -z-10"
        autoplay
        muted
        playsinline
    >
        <source
            src="https://consolidator.aero/assets/Tech%20Solution%20Hero%20(2x)-Ds75uTV-.mp4"
            type="video/mp4"
        />
        Tu navegador no soporta el video.
    </video>

    <div
        class="relative z-10 h-full flex items-center justify-end pr-[8vw] text-white text-left"
    >
        <div class="max-w-xl animate-fade-slide-in">
            <h2 class="text-sm tracking-[0.15rem] mb-4 text-gray-300 uppercase">
                Bienvenido a mi Perfil
            </h2>
            <h1 class="text-[2.8rem] leading-tight font-semibold mb-8">
                Programador con más de 8 años de experiencia.
            </h1>

            <!-- Íconos de redes sociales -->
            <div class="flex gap-4 mb-8">
                <!-- Facebook -->
                <a
                    href="#"
                    aria-label="Facebook"
                    class="hover:text-[#3b5998] transition"
                >
                    <svg
                        xmlns="http://www.w3.org/2000/svg"
                        class="w-6 h-6 fill-current"
                        viewBox="0 0 24 24"
                    >
                        <path
                            d="M22 12a10 10 0 1 0-11.5 9.9v-7H8v-3h2.5V9.5a3.5 3.5 0 0 1 3.5-3.5H17v3h-2c-.6 0-1 .4-1 1V12h3l-.5 3h-2.5v7A10 10 0 0 0 22 12z"
                        ></path>
                    </svg>
                </a>

                <!-- Twitter -->
                <a
                    href="#"
                    aria-label="Twitter"
                    class="hover:text-[#1DA1F2] transition"
                >
                    <svg
                        xmlns="http://www.w3.org/2000/svg"
                        class="w-6 h-6 fill-current"
                        viewBox="0 0 24 24"
                    >
                        <path
                            d="M23 3a10.9 10.9 0 0 1-3.14 1.53 4.48 4.48 0 0 0-7.86 3v1A10.66 10.66 0 0 1 3 4s-4 9 5 13a11.64 11.64 0 0 1-7 2c9 5 20 0 20-11.5a4.5 4.5 0 0 0-.08-.83A7.72 7.72 0 0 0 23 3z"
                        ></path>
                    </svg>
                </a>

                <!-- Instagram -->
                <a
                    href="#"
                    aria-label="Instagram"
                    class="hover:text-[#E1306C] transition"
                >
                    <svg
                        xmlns="http://www.w3.org/2000/svg"
                        class="w-6 h-6 fill-current"
                        viewBox="0 0 24 24"
                    >
                        <path
                            d="M7 2C4.2 2 2 4.2 2 7v10c0 2.8 2.2 5 5 5h10c2.8 0 5-2.2 5-5V7c0-2.8-2.2-5-5-5H7zm10 2c1.7 0 3 1.3 3 3v10c0 1.7-1.3 3-3 3H7c-1.7 0-3-1.3-3-3V7c0-1.7 1.3-3 3-3h10zm-5 3a5 5 0 1 0 0 10 5 5 0 0 0 0-10zm0 2a3 3 0 1 1 0 6 3 3 0 0 1 0-6zm4.5-.5a1 1 0 1 0 0 2 1 1 0 0 0 0-2z"
                        ></path>
                    </svg>
                </a>

                <!-- Telegram -->
                <a
                    href="#"
                    aria-label="Telegram"
                    class="hover:text-[#0088cc] transition"
                >
                    <svg
                        xmlns="http://www.w3.org/2000/svg"
                        class="w-6 h-6 fill-current"
                        viewBox="0 0 24 24"
                    >
                        <path
                            d="M21.5 3.5 2.5 10.6a1 1 0 0 0 .1 1.9l4.9 1.5 1.9 5.8a1 1 0 0 0 1.7.4l2.6-2.9 4.8 3.5a1 1 0 0 0 1.6-.6l2.5-15a1 1 0 0 0-1.5-1z"
                        ></path>
                    </svg>
                </a>

                <!-- TikTok -->
                <a
                    href="#"
                    aria-label="TikTok"
                    class="hover:text-[#69C9D0] transition"
                >
                    <svg
                        xmlns="http://www.w3.org/2000/svg"
                        class="w-6 h-6 fill-current"
                        viewBox="0 0 24 24"
                    >
                        <path d="M12 2h3a5 5 0 0 0 5 5v3a8 8 0 1 1-8-8z"></path>
                    </svg>
                </a>

                <!-- WhatsApp -->
                <a
                    href="#"
                    aria-label="WhatsApp"
                    class="hover:text-[#25D366] transition"
                >
                    <svg
                        xmlns="http://www.w3.org/2000/svg"
                        class="w-6 h-6 fill-current"
                        viewBox="0 0 24 24"
                    >
                        <path
                            d="M17 15.2c-.3-.1-1.7-.8-1.9-.9-.2-.1-.4-.2-.6 0s-.7.9-.9 1.1c-.2.2-.3.2-.6.1-.3-.1-1.2-.4-2.3-1.4-.8-.7-1.3-1.6-1.5-1.9-.2-.3 0-.5.1-.6.1-.1.3-.4.5-.6.2-.2.2-.3.3-.6.1-.3 0-.5 0-.6 0-.1-.6-1.5-.8-2s-.4-.4-.6-.4-.3 0-.5 0-.5.1-.7.3c-.2.2-.9.9-.9 2.1s.9 2.4 1.1 2.6c.1.2 1.8 2.8 4.4 3.8.6.2 1.1.3 1.5.4.6.1 1.1.1 1.6.1.5 0 1.6-.2 2.2-.8.3-.2.5-.7.4-1 0-.1-.2-.2-.4-.3z"
                        ></path>
                    </svg>
                </a>
            </div>

            <button
                class="inline-flex items-center gap-2 bg-gradient-to-r from-[#224459] to-[#193041] text-white text-base font-semibold py-3 px-6 rounded-full transition hover:bg-gray-200 pulse"
            >
                ← Comenzar
            </button>
        </div>
    </div>
</div>

<Skills></Skills>
