<style>
	.progress-ring {
		transition: stroke-dashoffset 2s ease-in-out;
		stroke: #ffa71a; /* Color del progreso */
	}

	/* Fondo gris para el círculo de progreso */
	.text-gray-200 {
		stroke: #e0e0e0;
	}

	@keyframes fillBar {
		from {
			width: 0%;
		}
	}

	.animate-fill {
		animation: fillBar 2s ease-out forwards;
	}
</style>

<script>
	document.addEventListener("DOMContentLoaded", () => {
		// Función para ajustar el progreso
		function setProgress(
			element: SVGCircleElement,
			percentage: number,
			textElement: SVGTextElement,
		) {
			const circumference = 94.2;
			const offset = circumference - (percentage / 100) * circumference;
			element.style.strokeDashoffset = offset.toString();
			textElement.textContent = `${percentage}%`;
		}

		// Selección de los círculos de progreso
		const progressElements =
			document.querySelectorAll<SVGCircleElement>(".progress-ring");

		// Configura el progreso para cada uno
		const percentages = [90, 80, 85, 75];

		progressElements.forEach((progressRing, index) => {
			const svg = progressRing.closest("svg");
			if (!svg) return;

			const text = svg.querySelector("text") as SVGTextElement;
			if (!text) return;

			setProgress(progressRing, percentages[index], text);
		});
	});
</script>
